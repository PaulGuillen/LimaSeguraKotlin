<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_width="110dp"
    android:layout_margin="10dp"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#DB4B54"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_district_image"
            android:layout_width="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/government_services"
            android:layout_height="70dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/home_district_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/nombre_categoria"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textSize="13sp"
            android:fontFamily="@font/monserrat_alternates_medium"
            android:textColor="@color/white"
            android:textAlignment="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>