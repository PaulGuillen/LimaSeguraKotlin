<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:contentDescription="@string/news_card"
            android:scaleType="centerCrop"
            android:src="@drawable/news" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserrat_alternates_medium"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="@string/titulo_noticias"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/resumen"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserrat_alternates_medium"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/resumen_noticias" />

            <TextView
                android:id="@+id/palsclave"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:fontFamily="@font/monserrat_alternates_medium"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/palabras_clave_noticias" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:fontFamily="@font/monserrat_alternates_medium"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="10dp"
                android:textAlignment="textEnd"
                android:singleLine="true"
                android:text="@string/fecha_noticias" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>